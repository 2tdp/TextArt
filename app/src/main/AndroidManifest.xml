<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.datnt.textart">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TextArt">
        <activity
            android:name=".activity.edit.AddTextActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".activity.edit.EditActivity"
            android:exported="false" />
        <activity
            android:name=".activity.Settings"
            android:exported="false" />
        <activity
            android:name=".activity.template.TemplateActivity"
            android:exported="false" />
        <activity
            android:name=".activity.project.ProjectsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.project.CreateProjectActivity"
            android:exported="false" />
        <activity
            android:name=".activity.RequestPermissionActivity"
            android:exported="false"
            android:theme="@style/theme_Splash" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/theme_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>